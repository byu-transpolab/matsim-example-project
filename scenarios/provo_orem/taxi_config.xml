		<param name="activityOpeningTime_9"     value="07:30:00" />
		<param name="activityClosingTime_9"     value="15:00:00" />

		<param name="activityType_10"            value="univ" /> <!-- university/college -->
		<param name="activityPriority_10"        value="1" />
